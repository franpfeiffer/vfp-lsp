# Force Unix-style line endings for all text files
* text=auto eol=lf

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf

# YAML and JSON
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# TypeScript/JavaScript (for VS Code extension)
*.ts text eol=lf
*.js text eol=lf

# Lua (for Neovim plugin)
*.lua text eol=lf

# Shell scripts
*.sh text eol=lf

# VFP test fixtures
*.prg text eol=lf

# Binary files (don't convert)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.vsix binary
*.exe binary

# Keep Windows batch files as CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
